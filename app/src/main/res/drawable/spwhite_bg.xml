<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="0" android:endColor="@color/inner" android:startColor="@color/inner" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/bg_border" />

                    <corners android:radius="0dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="@dimen/_20sdp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/membership_option_btn_arrow" />
                // you can use any other image here, instead of default_holo_dark_am
            </item>
        </layer-list>
    </item>

</selector>