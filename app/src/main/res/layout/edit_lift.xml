<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="end"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_close" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/weight_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:textSize="@dimen/_13sdp"
            android:hint="Weight"
            android:textColor="@color/cat_color"
            android:textColorHint="@color/cat_color"
            android:background="@drawable/rect_bg"
            android:maxLines="3"
            android:padding="@dimen/_10sdp" />
        <Spinner
            android:id="@+id/sp_weight"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/spwhite_bg"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/sp_year"
            android:layout_width="0dp"
            android:background="@drawable/spwhite_bg"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"></Spinner>
        <Spinner
            android:id="@+id/sp_month"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/spwhite_bg"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"></Spinner>

        <Spinner
            android:id="@+id/sp_day"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/spwhite_bg"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"></Spinner>
    </LinearLayout>
    <EditText
        android:id="@+id/example_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_13sdp"
        android:hint="Y2B08P6YJZE"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:textColorHint="@color/cat_color"
        android:background="@drawable/rect_bg"
        android:maxLines="3"
        android:padding="@dimen/_10sdp" />
    <TextView
        android:id="@+id/example_txt"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
       android:text="Example: v=2thxF8yb5bc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/add_comment"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/red"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp" />

</LinearLayout>