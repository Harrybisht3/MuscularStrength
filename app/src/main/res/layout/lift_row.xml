<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/lift_bg"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:textColor="@color/red"
        android:text="Bench"
        android:textSize="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/weight"
            android:text="Weight:"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/cat_color"
            android:textSize="@dimen/_12sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date"
            android:text="Date:"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/cat_color"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/weight"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/motivate_value"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/rect_bg"
            android:textSize="@dimen/_14sdp"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp" />
        <TextView
            android:id="@+id/motivate"
            android:text="Motivate"
            android:layout_toRightOf="@+id/motivate_value"
            android:textColor="@color/level"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/edit"
                android:src="@drawable/abc_btn_radio_material"
                android:layout_width="@dimen/_20sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/_20sdp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>