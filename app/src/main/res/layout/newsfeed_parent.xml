<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingTop="@dimen/padding_menu"
    android:paddingBottom="@dimen/padding_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userimg"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:border_width="1dp"
        app:border_color="@android:color/transparent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/userimg"
        android:layout_height="wrap_content">
      <!--  <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_user"
                android:text="admin"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:textColor="@color/cat_color"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:text="time ago"
                android:textSize="@dimen/_12sdp"
                android:maxLength="12"
                android:textColor="@color/cat_color"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:text="time ago"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxLines="2"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/indicator"
                android:layout_width="@dimen/_20sdp"
                android:src="@drawable/nav_back_btn"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/_20sdp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/likeTxt"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/accept"
                android:textSize="@dimen/_12sdp"
                android:text="@string/like"
                android:textStyle="normal"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:text="|"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="@+id/likeTxt"
                android:layout_toRightOf="@+id/likeTxt"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/cat_color"
                android:layout_height="@dimen/_10sdp" />
            <TextView
                android:id="@+id/text_reply"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/view1"
                android:text="Reply"
                android:textSize="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/cat_color"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:text="|"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_reply"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/cat_color"
                android:layout_height="@dimen/_10sdp" />
            <TextView
                android:id="@+id/time_ago"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/view2"
                android:text="1 hour ago"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/cat_color"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>