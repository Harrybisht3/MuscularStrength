<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/profile_bg"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layouttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/dash_icon_profile" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/dash_icon_msg" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/notifications_social_bell" />

    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImg"
        android:layout_below="@+id/layouttop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:border_width="@dimen/_3sdp"
        app:border_color="@color/img_border"/>

   <!-- <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImg1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
     android:layout_centerHorizontal="true"
      />-->
    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_below="@+id/profileImg"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="User Name heres"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:id="@+id/textlin"
            android:orientation="horizontal"
            android:layout_below="@+id/user"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/account_type"
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="account Type"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/level"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/level"
                android:text="motivation level" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/social_bg"
      android:layout_below="@+id/info_layout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/notifications_icon_fb" />

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/notifications_icon_twitter" />

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/notifications_icon_instagram" />

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/notifications_icon_youtube" />

        <ImageView
            android:id="@+id/pin_intrest"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:src="@drawable/notifications_icon_pintrest" />

    </LinearLayout>
</RelativeLayout>