<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/headerView"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/moreOption_layout"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/center1"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:background="@color/black"
                    android:layout_height="2dp"></View>
                <RelativeLayout
                    android:id="@+id/articleView"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_toLeftOf="@+id/center1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/article_icon1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/dash_icon_articles"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/article_icon1"
                        android:layout_height="wrap_content"
                        android:text="@string/article"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/workoutView"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/center1"
                    android:background="@drawable/circle_bg"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/workout_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:src="@drawable/dash_icon_workouts"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/workout_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/workout"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recipeView"
                    android:layout_toRightOf="@+id/center1"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/workoutView"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/recipe_icon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:src="@drawable/dash_icon_recipes"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/recipe_icon"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="@string/recipe"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/forumView"
                    android:layout_width="wrap_content"
                    android:background="@drawable/circle_bg"
                    android:layout_toLeftOf="@+id/center1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/articleView"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/forum_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:src="@drawable/dash_icon_forums"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/forum_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/forum"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/exclusiveView"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/recipeView"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/exclusive_icon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/dash_icon_exclusive"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/exclusive_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/exclusive"
                        android:textSize="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/hideoption_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/newsfeedView"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/storyView"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/newsfeed_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_icon_newsfeed"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/newsfeed_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/newsfeed"
                        android:textSize="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storyView"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/story_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_icon_story"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/story_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/story"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/photoView"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/storyView"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/photo_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_icon_photos"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/photo_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/photos"
                        android:textSize="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/videosView"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/routineView"
                    android:layout_below="@+id/newsfeedView"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/videos_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_icon_videos"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/videos_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/videos"
                        android:textSize="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/routineView"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/storyView"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/routine_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_icon_routines"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/routine_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/routines"
                        android:textSize="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mealplanView"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/routineView"
                     android:layout_below="@+id/photoView"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_9sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/mealplan_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_icon_meal_plan"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/mealplan_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_plan"
                        android:textSize="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/liftView"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/videosView"
                    android:layout_toLeftOf="@+id/center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/lift_icon"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dash_icon_lifts"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/lift_icon"
                        android:layout_height="wrap_content"
                        android:text="@string/lifts"
                        android:textSize="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
                <View
                    android:id="@+id/center"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_10sdp"></View>
                <RelativeLayout
                    android:id="@+id/progressView"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/circle_bg"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/progress_icon"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/dash_icon_progress"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/progress_icon"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="@string/progress"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"/>
                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/moreOption"
                android:background="@drawable/btn_transparent_bg"
                android:layout_width="match_parent"
                android:text="@string/more_option"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="@dimen/_50sdp" />
            <TextView
                android:id="@+id/copyrighttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:text="@string/copyright"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:layout_alignParentBottom="true"/>




        </LinearLayout>
    </ScrollView>

    </RelativeLayout>